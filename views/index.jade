extends layout

block content
		.row
		.col-sm-10.col-sm-offset-1
			.jumbotron.homewelcome
					h1 Welcome to #{title}

				.row
					img(src='/images/MagellanMap.gif')
					p.intro= "Join us as we follow in Magellan's footsteps on the first ever circumnavigation of the earth."

				.row.ports
					.col-sm-4.col-sm-offset-2
						for port in getAllPorts
							if port.id < 3
								h4 #{port.name}
					.col-sm-4.col-sm-offset-2
						for port in getAllPorts
							if port.id > 2
								h4 #{port.name}

					.buttondiv
						a.btn.btn-primary.btn-lg.active(href='/' + firstPort.name) First Stop: #{firstPort.name}
						
